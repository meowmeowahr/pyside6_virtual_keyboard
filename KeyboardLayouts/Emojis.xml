    <!-- Row 3: Food and Drink -->
    <Row type="keyRow">
        <Key symbol="🍎" keystroke="🍎" width="1.0"/>
        <Key symbol="🍔" keystroke="🍔" width="1.0"/>
        <Key symbol="🍕" keystroke="🍕" width="1.0"/>
