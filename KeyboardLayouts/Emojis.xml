        <Key symbol="🗽" keystroke="🗽" width="1.0"/>
        <Key symbol="Space" keystroke=" " width="3.0"/>
        <Key symbol="123" layoutLink="NumSym.xml" width="1.5"/> <!-- Link back to numbers/symbols -->
    </Row>
</KeyboardLayout>
