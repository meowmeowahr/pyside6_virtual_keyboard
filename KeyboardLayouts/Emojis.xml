        <Key symbol="🍜" keystroke="🍜" width="1.0"/>
        <Key symbol="ICON_BKSP" keystroke="backspace" width="1.0"/>
    </Row>

    <!-- Row 4: Travel and Places, and layout switcher -->
    <Row type="keyRow">
        <Key symbol="ABC" layoutLink="ROOT" width="1.5"/> <!-- Link back to main QWERTY -->
        <Key symbol="🚗" keystroke="🚗" width="1.0"/>
        <Key symbol="✈️" keystroke="✈️" width="1.0"/>
